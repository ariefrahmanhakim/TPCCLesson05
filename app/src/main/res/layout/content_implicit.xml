<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_implicit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tpccina.tpcclesson05.ImplicitActivity"
    tools:showIn="@layout/activity_implicit">

    <Button
        android:text="Set Alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:id="@+id/alarm_button"
        android:elevation="10dp"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/white"
        android:shadowColor="@android:color/darker_gray"
        android:soundEffectsEnabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Set Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alarm_button"
        android:layout_alignStart="@+id/alarm_button"
        android:layout_marginTop="11dp"
        android:id="@+id/timer_button"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:elevation="6dp"
        android:soundEffectsEnabled="true" />

    <Button
        android:text="Show Calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer_button"
        android:layout_alignStart="@+id/timer_button"
        android:layout_marginTop="42dp"
        android:id="@+id/calendar_button" />
</RelativeLayout>
